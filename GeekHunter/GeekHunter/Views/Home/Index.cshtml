@using GeekHunter.Models
@model GeekHunter.Models.DisplayCandidateViewModel

<div id="page">
    <div id="title">
        <h2>Geek Hunter</h2>
    </div>
    <div id="pageBody">
        <div class="form-group">
            @using (Html.BeginForm("Search", "Home"))
            {
                <div class="container searchBox">
                    <div class="row">
                        <div class="col-md-offset-3 col-md-2">
                            @Html.DropDownListFor(x => x.SkillId, Model.SkillListItems, new { @class = "form-control" })
                        </div>
                        <div class="col-xs-1">
                            <button type="submit" class="btn btn-info"><span class="glyphicon glyphicon-search"></span> Filter</button>
                        </div>
                        <div class="col-xs-1">
                            @Html.ActionLink("Clear Filter", "ClearFilter", new object { }, new { @Class = "btn btn-info" })
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="table-responsive">
            <div class="col-lg-offset-1">
                <table class="table  table-striped table-bordered table-condensed" id="createTbl">
                    <thead id=" thead">
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Technology</th>
                            <th id ="thsingle">Action</th>
                        </tr>
                    </thead>
                    <tbody id="tbody">
                        @foreach (var item in Model.Candidates)
                        {
                            <tr id="row">
                                <td>
                                    @item.FirstName
                                </td>
                                <td>
                                    @item.LastName
                                </td>
                                <td>
                                    @item.SkillName
                                </td>
                                <td>
                                        <span class="glyphicon glyphicon-trash"></span>
                                        @Html.ActionLink("Delete", "Delete", new {@id = item.Id})
                                    
                                    <span class=""><span class="glyphicon glyphicon-pencil"></span>@Html.ActionLink("Update", "Update", new {@id = item.Id})</span>
                                </td>
                           </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



